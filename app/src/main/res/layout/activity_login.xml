<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lsaal.cf.Login">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="520dp">

            <EditText
                android:id="@+id/txtUser"
                android:layout_width="345dp"
                android:layout_height="40dp"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/obj_redondo"
                android:ems="10"
                android:gravity="center"
                android:hint="alguien@email.com"
                android:inputType="text|textEmailAddress"
                android:password="false"
                android:textColorHint="@color/grisoscuro" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="345dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/txtUser"
                android:layout_below="@+id/textView7"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:background="@drawable/obj_redondo"
                android:ems="10"
                android:gravity="center"
                android:hint="Contraseña"
                android:inputType="textPersonName|textPassword"
                android:password="true"
                android:textColorHint="@color/grisoscuro" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtUser"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="Contraseña:"
                android:textColor="@color/negro" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Lo tradicional es pasado" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Usuario:"
                android:textColor="@color/negro" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/logo" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/switchRemember"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_weight="0.2"
                android:autoText="false"
                android:background="@drawable/obj_redondo"
                android:backgroundTint="@color/colorPrimaryDark"
                android:foregroundGravity="center"
                android:gravity="center_horizontal|center"
                android:text="Iniciar sesión" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/btnLogin"
                android:layout_below="@+id/btnLogin"
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:layout_weight="0.2"
                android:background="@drawable/obj_redondo"
                android:backgroundTint="@color/colorPrimaryDark"
                android:gravity="center_horizontal|center"
                android:text="Registrame" />

            <Switch
                android:id="@+id/switchRemember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:text="Recuerdame" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
